<% @steps.each do |step| %>
    <%= content_tag :tr, id: dom_id(step), class: dom_class(step) do %>
                  <td><%= step.name %></td>
                <td><%= link_to 'Show', step %></td>
      <td><%= link_to 'Edit', edit_step_path(step) %></td>
      <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  <% end %>

  <div>
    <%= link_to new_step_path, remote: true, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Step
    <% end %>
  </div>