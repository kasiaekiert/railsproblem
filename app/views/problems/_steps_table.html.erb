
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% steps.each do |step| %>
      <tr id='tr_step_<%= step.id %>'>
        <td><%= step.name %></td>
        <td><%= link_to 'Show', step %></td>
        <td><%= link_to 'Edit', edit_step_path(step) %></td>
        <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: "delete_step" %></td>
      </tr>
    <% end %>
  </tbody>
</table>