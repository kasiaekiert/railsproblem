<div class="container"> 
  <%= form_for(@problem, html: { class: "form-horizontal", role: "form" }) do |f| %>
    <% if @problem.errors.any? %>
      <div class="alert alert-danger alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4><%= pluralize(@problem.errors.count, "error") %> prohibited this problem from being saved:</h4>

        <ul>
        <% @problem.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div class="form-group">
      <div class="row">
          <div class="col-sm-2">
            <%= f.label :name, "Problem name", class: "control-label" %>
          </div>
          <div class="col-sm-10 table-problemname">
            <%= f.text_field :name, class: "form-control " %>
          </div>
      </div>
    </div>

          
    <%= f.fields_for :steps do |f| %>
      <%= render 'steps_fields', f: f %>
    <% end %>

    
    <%= link_to_add_fields 'Add Steps', f, :steps, { partial: "problems/steps_fields" }, { class: 'btn btn-info' } %>

    
  <div class="form-group btn-back-edit">
      <%= f.submit class: "btn btn-primary btn-basic btn-back-edit" %>
  </div>

  <% end %>
</div>
