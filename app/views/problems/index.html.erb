<div class="page-header">
  <%= link_to new_problem_path, class: 'btn btn-primary btn-basic' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Problem
  <% end %>
  <h1>Listing problems</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <% @problems.each do |problem| %>
        <tr id="tr_problem_<%= problem.id %>">
          <td class="link-text"><%= problem.name %></td>
          <td class="link-text"><%= link_to 'Show', problem %></td>
          <td class="link-text"><%= link_to 'Edit', edit_problem_path(problem) %></td>
          <td class="link-text"><%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: "delete_problem" %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
