  <div class="row">
    <div class="col-sm-7 page-header">
      <h1>Listing problems</h1>
    </div>

    <div class="col-sm-5 btn-back-edit">
      <%= link_to new_problem_path, class: 'btn btn-primary btn-basic' do %>
        <span class="glyphicon glyphicon-plus btn-newproblem"></span>
        New Problem
      <% end %>
    </div>
  </div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Number of steps</th>
            <th>Options</th>
      </tr>
    </thead>

    <tbody>
      <% @problems.each do |problem| %>
        <tr id="tr_problem_<%= problem.id %>">
          <td class="link-text"><%= link_to problem.name, problem %></td>
          <td class="link-text"><%= problem.steps.count %></td>
          <td class="link-text"><%= link_to 'Show', problem %> <%= link_to 'Edit', edit_problem_path(problem) %> <%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: "delete_problem" %> </td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
