<%= form_for(@step, html: { class: "form-horizontal step-form", role: "form" }, :remote => true) do |f| %>
  <%= f.hidden_field :problem_id %>
  <% if @step.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@step.errors.count, "error") %> prohibited this step from being saved:</h4>

      <ul>
      <% @step.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <div class="row">
          <%= f.label :new_step, class: "col-sm-2 control-label" %>
          <div class="col-sm-5">
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="col-sm-4">
          <%= f.submit class: "btn btn-primary" %>
          </div>
      </div>
  </div>
  
   
<% end %>
